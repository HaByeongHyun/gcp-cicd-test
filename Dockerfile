# Multi-stage build for Next.js with pnpm
FROM node:20-alpine AS base

# Install dependencies only when needed
FROM base AS deps
RUN apk add --no-cache libc6-compat

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /app

# Copy dependency files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Install dependencies
RUN pnpm install --frozen-lockfile

# Rebuild the source code only when needed
FROM base AS builder

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /app

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Accept build arguments for environment variables
ARG NEXT_PUBLIC_PERFORMANCE_API_KEY
ARG NEXT_PUBLIC_PERFORMANCE_API_URL
ARG NEXT_PUBLIC_GOV_API_KEY
ARG NEXT_PUBLIC_GOV_API_URL

# Set environment variables for build
ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_ENV=production
ENV NEXT_PUBLIC_PERFORMANCE_API_KEY=$NEXT_PUBLIC_PERFORMANCE_API_KEY
ENV NEXT_PUBLIC_PERFORMANCE_API_URL=$NEXT_PUBLIC_PERFORMANCE_API_URL
ENV NEXT_PUBLIC_GOV_API_KEY=$NEXT_PUBLIC_GOV_API_KEY
ENV NEXT_PUBLIC_GOV_API_URL=$NEXT_PUBLIC_GOV_API_URL

# Build Next.js application
RUN pnpm build

# Production image, copy all the files and run next
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy necessary files from builder
COPY --from=builder /app/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

USER nextjs

# Expose port (Cloud Run will inject PORT env variable)
EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Start the application
CMD ["node", "server.js"]
